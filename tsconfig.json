{
  "compilerOptions": {
    "lib": ["es6", "dom", "scripthost"],
    "types": [],
    "typeRoots": ["./node_modules/@types"],
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "target": "es6",
